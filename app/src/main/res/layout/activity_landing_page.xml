<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/landing"
    android:background="@drawable/bglanding">

    <!-- Logo at the top -->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/logolog" />


    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:text="SafeStride"
        android:textColor="#D7D2FF"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="1dp" />

    <!-- Tagline text below SafeStride -->
    <TextView
        android:id="@+id/taglineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="Ensuring safety and support with every step, SafeStride connects PWDs and caregivers in real time"
        android:textAlignment="center"
        android:textColor="#CFE3FF"
        android:textSize="16sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true">

        <!-- Log In button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbg"
            android:text="Log In"
            android:textColor="#EDEFFF"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <!-- Sign Up button -->
        <Button
            android:id="@+id/signupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="15sp"
            android:textColor="#EDEFFF"
            android:textStyle="bold"
            android:background="@drawable/buttonborder"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp" />

    </LinearLayout>

</RelativeLayout>
