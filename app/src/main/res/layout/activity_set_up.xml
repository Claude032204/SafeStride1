<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#000B7E">

    <!-- Header -->
    <!-- Visible Header with Back Arrow -->

    <!-- Title Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="7dp"
        android:visibility="visible">

        <!-- Back Arrow Icon -->
        <ImageView
            android:id="@+id/backArrowIcon"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/back_arrow"
            android:src="@drawable/backkk"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/connectDeviceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect Your Device"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginHorizontal="16dp"
        android:src="@drawable/wearsafe"
        android:contentDescription="@string/logo_description"
        android:layout_marginBottom="12dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:adjustViewBounds="true" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/deviceSetupInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Setting up the Device requires Bluetooth or GPS and SafeStride Device."
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="24dp" />


    <!-- Button -->
    <Button
        android:id="@+id/connectDeviceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect Device Now"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/buttonborder"
        android:textColor="@android:color/white"
        android:paddingVertical="12dp"
        android:elevation="4dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp" />

</LinearLayout>
