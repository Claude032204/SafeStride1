<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Theme for the entire application, extending AppCompat.Light but without the ActionBar -->
    <style name="Theme.SafeStride" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Set Status Bar color to your app's color (#000B7E) -->
        <item name="android:statusBarColor">#000B7E</item> <!-- Dark Blue color for Status Bar -->
        <item name="android:windowTranslucentStatus">false</item> <!-- Ensure Status Bar is not translucent -->

        <!-- Set Navigation Bar color to your app's color (#000B7E) -->
        <item name="android:navigationBarColor">#000B7E</item> <!-- Dark Blue color for Navigation Bar -->
        <item name="android:windowTranslucentNavigation">false</item> <!-- Ensure Navigation Bar is not translucent -->

        <!-- Prevent automatic dark mode on the Navigation Bar -->
        <item name="android:forceDarkAllowed">false</item> <!-- Prevent dark mode for navigation bar -->

        <!-- Set the window's background to match your app's color or transparency -->
        <item name="android:windowBackground">#000B7E</item> <!-- Dark Blue background (same color as status/nav bar) -->

        <!-- Reference to the button style defined in styles.xml -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>
</resources>
