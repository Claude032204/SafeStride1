<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash Screen Theme -->
    <style name="SplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item> <!-- Background color -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_name_foreground</item> <!-- App icon -->
        <item name="windowSplashScreenAnimationDuration">1000</item> <!-- Animation duration -->
        <item name="postSplashScreenTheme">@style/Theme.SafeStride</item> <!-- Main app theme -->
    </style>

    <!-- Main App Theme -->
    <style name="Theme.SafeStride" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

</resources>
